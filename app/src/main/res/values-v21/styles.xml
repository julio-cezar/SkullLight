<resources>

        <!-- Base application theme. -->
        <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
                <!-- Customize your theme here. -->
                <item name="colorPrimary">@color/colorPrimary</item>
                <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
                <item name="colorAccent">@color/colorAccent</item>
                <item name="android:typeface">monospace</item>
                <item name="android:toolbarStyle">@style/Toolbar</item>
        </style>

        <style name="fullscreenTheme" parent="Theme.AppCompat.DayNight">
                <!-- Customize your theme here. -->
                <item name="windowNoTitle">true</item>
                <item name="windowActionBar">false</item>
                <item name="android:windowFullscreen">true</item>
                <item name="android:windowContentOverlay">@null</item>
                <item name="colorPrimary">@color/colorPrimary</item>
                <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
                <item name="colorAccent">@color/colorAccent</item>
        </style>



        <style name="style_layout">
                <item name="android:layout_width">fill_parent</item>
                <item name="android:layout_height">wrap_content</item>
                <item name="android:gravity">center</item>
                <item name="android:orientation">horizontal</item>
        </style>

        <style name="style_layout_botoes">
                <item name="android:layout_width">match_parent</item>
                <item name="android:layout_height">match_parent</item>
                <!-- <item name="android:gravity">center</item>-->
                <item name="android:orientation">vertical</item>
        </style>

        <style name="style_text_botoes">
                <item name="android:layout_width">match_parent</item>
                <item name="android:layout_height">match_parent</item>
                <item name="android:textColor">#212121</item>
                <item name="android:gravity">center</item>
                <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        </style>

        <style name="style_botoes">
                <item name="android:layout_width">100dp</item>
                <item name="android:layout_height">100dp</item>
                <item name="android:gravity">bottom|center</item>
                <item name="android:textColor">#ffffff</item>
                <!-- <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>  -->
        </style>

        <!--main activity tollbar style-->
        <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
                <item name="android:background">?attr/colorPrimary</item>
                <item name="android:popupTheme">@style/Theme.AppCompat.Light</item>
        </style>

        <style name="AppTheme.Main" parent="@style/AppTheme">
                <item name="android:windowContentTransitions">true</item>
        </style>

        <style name="AppTheme.Flash" parent="@style/AppTheme">
                <item name="android:windowContentTransitions">true</item>
                <item name="android:windowEnterTransition">@transition/flash_window_enter_transition</item>
                <item name="android:windowReturnTransition">@transition/flash_window_return_transition</item>
        </style>

        <style name="AppTheme.Prank" parent="@style/AppTheme">
                <item name="android:windowContentTransitions">true</item>
                <item name="android:windowEnterTransition">@transition/prank_window_enter_transition</item>
                <item name="android:windowReturnTransition">@transition/prank_window_return_transition</item>
        </style>

        <style name="AppTheme.Donation" parent="@style/AppTheme">
                <item name="android:windowContentTransitions">true</item>
                <item name="android:windowEnterTransition">@transition/donation_window_enter_transition</item>
                <item name="android:windowReturnTransition">@transition/donation_window_return_transition</item>
        </style>
</resources>
